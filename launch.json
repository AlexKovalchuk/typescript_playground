{
  "type": "node",
  "request": "launch",
  "name": "Mocha Current File",
  "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
  "args": [
    "-r",
    "--no-timeouts",
    "--colors",
    "${file}",
    "--require",
    "ts-node/register",
    "${workspaceFolder}/tests/*-test.ts",
    "--full-trace",
    "--exit"
  ],
  "console": "integratedTerminal",
  "sourceMaps": true,
  "internalConsoleOptions": "neverOpen",
  "protocol": "inspector"
}